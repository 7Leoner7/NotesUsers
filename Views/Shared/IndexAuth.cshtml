@model NotesUsers.Models.AutorizationViewModel

@{
    ViewData["Title"] = "Авторизация";
}

<h1>Авторизация</h1>

<hr />

<div class="child">
    <form asp-action="RequestAuth">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Login" class="control-label">Логин</label>
            <input asp-for="Login" class="form-control" value="@Model.Login" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label">Пароль</label>
            <input asp-for="Password" type="password" class="form-control" value="@Model.Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-primary"/>
            @{ if (Model.HasError == 1)
                {<hr /><label>Неправильно указан логин или пароль</label>}}
        </div>
    </form>
</div>

<div>
    <a href="/Home/Index">На главную страницу</a>
</div>

@section Scripts {
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}